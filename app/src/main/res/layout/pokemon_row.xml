<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/poke_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    android:layout_margin="6dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_poke_card_content"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/grass"

        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:alpha="0.2"
            android:src="@drawable/pokeball"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="TODO"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/poke_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/poke_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingStart="10dp"
            tools:text="#001" />

        <TextView
            android:id="@+id/poke_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/poke_number"
            android:textStyle="bold"
            android:paddingStart="10dp"
            tools:text="Bulbasaur" />

        <ImageView
            android:id="@+id/pixel_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="end"
            android:src="@drawable/bulbasaur_pixel"
            android:contentDescription="TODO"
            android:layout_margin="5dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.cardview.widget.CardView>
